@model IEnumerable<VeggieRestaurantApp.Models.Diner>

@{
    ViewData["Title"] = "ReviewerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ReviewerIndex</h1>

<p>
    <a asp-action="Index">Back To Your Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnniversaryMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnniversaryMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>        
        </tr>
}
    </tbody>
</table>
