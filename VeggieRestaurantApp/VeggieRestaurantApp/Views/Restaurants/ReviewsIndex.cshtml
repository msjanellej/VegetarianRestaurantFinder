@model IEnumerable<VeggieRestaurantApp.Models.RestaurantReview>

@{
    ViewData["Title"] = "ReviewsIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Reviews</h1>

<p><a asp-action="Index">Back To Account Details</a> </p>
<table class="table table-hover">
    <thead>
        <tr class="table-success">
            <th>
                @Html.DisplayNameFor(model => model.Review)
            </th>
            <th>
                Restaurant
            </th>
            <th>
                Reviewer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.restaurant.Name)
            </td>
            <td>
                <a asp-action="ReviewerDetails" asp-route-id="@item.Id">Reviewer Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
